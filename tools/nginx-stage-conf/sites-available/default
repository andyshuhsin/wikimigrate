# Default server configuration
#
server {
	listen 80 default_server;
	listen [::]:80 default_server;
	server_name thegoodmove.org www.thegoodmove.org stage.thegoodmove.org;
	return 301 https://$server_name$request_uri;
}

server {
	listen 443 ssl http2 default_server;
	listen [::]:443 ssl http2 default_server;
	include snippets/ssl-www.thegoodmove.org.conf;
	include snippets/ssl-params.conf;

	root /var/www/vp;

	index index.html index.htm index.nginx-debian.html;

	server_name thegoodmove.org www.thegoodmove.org;

	location / {
		try_files $uri $uri/ =404;
	}

	location ~* \.js$ {
	    expires 30d;
	    add_header Pragma public;
	    add_header Cache-Control "public";
	}

	location ~ /.well-known {
		allow all;
	}
}

server {
	listen 443 ssl http2;
	listen [::]:443 ssl http2;
	include snippets/ssl-stage.thegoodmove.org.conf;
	include snippets/ssl-params.conf;

	server_name stage.thegoodmove.org;

	root /var/www/vp-stage;

	index index.html;

	location / {
		try_files $uri $uri/ =404;
	}

        location ~ /.well-known {
                allow all;
        }
}

