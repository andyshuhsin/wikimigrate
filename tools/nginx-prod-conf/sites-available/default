server {
	listen 80 default_server;
	listen [::]:80 default_server;
	server_name wikimigrate.org www.wikimigrate.org en.wikimigrate.org zh.wikimigrate.org thegoodmove.org stage.thegoodmove.org;
	return 301 https://$server_name$request_uri;
}

server {
	server_name wikimigrate.org;
	set $lang "";
	ssl_certificate /etc/letsencrypt/live/wikimigrate.org/fullchain.pem;
	ssl_certificate_key /etc/letsencrypt/live/wikimigrate.org/privkey.pem;

	include snippets/shared.conf;
}

server {
	server_name www.wikimigrate.org;
	set $lang "";
	ssl_certificate /etc/letsencrypt/live/www.wikimigrate.org/fullchain.pem;
	ssl_certificate_key /etc/letsencrypt/live/www.wikimigrate.org/privkey.pem;

	include snippets/shared.conf;
}

server {
	server_name en.wikimigrate.org;
	set $lang en;
	ssl_certificate /etc/letsencrypt/live/en.wikimigrate.org/fullchain.pem;
	ssl_certificate_key /etc/letsencrypt/live/en.wikimigrate.org/privkey.pem;

	include snippets/shared.conf;
}

server {
	server_name zh.wikimigrate.org;
	set $lang zh-hans;
	ssl_certificate /etc/letsencrypt/live/zh.wikimigrate.org/fullchain.pem;
	ssl_certificate_key /etc/letsencrypt/live/zh.wikimigrate.org/privkey.pem;

	include snippets/shared.conf;
}

server {
	listen 443 ssl http2 default_server;
	listen [::]:443 ssl http2 default_server;
	include snippets/ssl-www.thegoodmove.org.conf;
	include snippets/ssl-params.conf;

	root /var/www/vp;

	index index.html index.htm index.nginx-debian.html;

	server_name thegoodmove.org www.thegoodmove.org;

	location / {
		try_files $uri $uri/ =404;
	}

	location ~* \.js$ {
	    expires 30d;
	    add_header Pragma public;
	    add_header Cache-Control "public";
	}

	location ~ /.well-known {
		allow all;
	}
}

server {
	listen 443 ssl http2;
	listen [::]:443 ssl http2;
	include snippets/ssl-stage.thegoodmove.org.conf;
	include snippets/ssl-params.conf;

	server_name stage.thegoodmove.org;

	root /var/www/vp-stage;

	index index.html;

	location / {
		try_files $uri $uri/ =404;
	}

        location ~ /.well-known {
                allow all;
        }
}

